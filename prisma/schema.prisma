generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Product {
  sae_id    String   @id
  imageUrl  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Logo {
  id        String   @id @default(cuid())
  imageUrl  String
  preferred Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Prompt {
  id        String  @id @default(cuid())
  text      String
  preferred Boolean
}

model CompanyInfo {
  id          String @id @default(cuid())
  information String
}
